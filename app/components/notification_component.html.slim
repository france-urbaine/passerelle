.notification( role="alert" aria-live="polite" )
  - case type
  - when "success"
    = helpers.svg_icon("check-circle-icon", "Succ√©s", class: "notification__icon text-green-500")
  - when "alert", "error"
    = helpers.svg_icon("exclamation-circle-icon", "Alerte", class: "notification__icon text-red-500")
  - else
    = helpers.svg_icon("information-circle", "Information", class: "notification__icon text-blue-500")

  .notification__message
    .notification__title= title
    = simple_format(description)
  
  .notification__actions
    .icon-button
      = helpers.svg_icon("x-icon", "Cacher cette notifications")