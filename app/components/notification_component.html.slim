.notification(
  role="alert"
  aria-live="polite"
  data-controller="notification"
  data-notification-delay-value=delay
  data-transition-enter-from="notification--transition-enter-from"
  data-transition-enter-to="notification--transition-enter-to"
  data-transition-leave-from="notification--transition-leave-from"
  data-transition-leave-to="notification--transition-leave-to"
)
  - case type
  - when "success"
    = helpers.svg_icon("check-circle-icon", "Succ√©s", class: "notification__icon notification__icon--success")
  - when "error"
    = helpers.svg_icon("exclamation-circle-icon", "Alerte", class: "notification__icon notification__icon--error")
  - else
    = helpers.svg_icon("information-circle-icon", "Information", class: "notification__icon")

  .notification__message
    .notification__title= title
    = simple_format(description)
  
  .notification__actions
    button.icon-button( data-action="notification#hide" )
      = helpers.svg_icon("x-icon", "Cacher cette notifications")