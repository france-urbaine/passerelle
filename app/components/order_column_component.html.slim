- css_class = %w[icon-button datatable__order-button]

- if current_asc?
  a.icon-button.datatable__order-button.datatable__order-button--current(
    aria-label="Trier par ordre décroissant"
    data-turbo-action="advance"
    data-turbo-frame="content"
    href=order_url(:desc)
  )
    = helpers.svg_icon("arrow-sm-down-icon", "Trier par ordre décroissant")
    span.tooltip Trier par ordre décroissant

- elsif current_desc?
  a.icon-button.datatable__order-button.datatable__order-button--current(
    aria-label="Trier par ordre croissant"
    data-turbo-action="advance"
    data-turbo-frame="content"
    href=order_url(:asc)
  )
    = helpers.svg_icon("arrow-sm-up-icon", "Trier par ordre croissant")
    span.tooltip Trier par ordre croissant

- else
  a.icon-button.datatable__order-button(
    aria-label="Trier par ordre croissant"
    data-turbo-action="advance"
    data-turbo-frame="content"
    href=order_url(:asc)
  )
    = helpers.svg_icon("arrow-sm-up-icon", "Trier par ordre croissant")
    span.tooltip Trier par ordre croissant
