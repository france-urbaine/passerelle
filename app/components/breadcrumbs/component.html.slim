.header-bar
  .breadcrumbs
    .breadcrumbs__path
      a.icon-button(
        aria-label="Retour à la page d'accueil"
        data-turbo-frame="_top"
        href="/"
      )= icon_component("home", "Retour à la page d'accueil", variant: :solid)

    - paths.each.with_index do |path, index|
      .breadcrumbs__separator="/"
      .breadcrumbs__path
        - if @heading && index == paths.size - 1
          h1= path
        - else
          = path

  .flex-auto
  .header-bar__actions
    - actions.each do |action|
      .header-bar__action
        = action
