= dialog(back_url: params.fetch(:back, regions_path)) do
  .dialog__header
    h1#dialog-title.dialog__title Modification de la r√©gion

  = form_with(model: region) do |form|
    = back_param_input
    .dialog__content
      .form-block
        = form.label :name
        = form.text_field :name, autofocus: true
        = display_errors region, :name

      .form-block
        = form.label :code_region
        = form.text_field :code_region
        = display_errors region, :code_region

    .dialog__actions
      button.button.button--primary( type="submit" ) Enregistrer
      a.button(
        href=params.fetch(:back, regions_path)
        data-turbo-action="restore"
        data-action="dialog#close"
      ) Annuler
