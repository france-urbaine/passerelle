= content_frame_component do
  = content_layout_component do |layout|
    - layout.with_breadcrumbs do |breadcrumbs|
      - breadcrumbs.with_path "Administration"
      - breadcrumbs.with_path "DDFIP", admin_ddfips_path
      - breadcrumbs.with_path @ddfip.name, admin_ddfip_path(@ddfip)
      - breadcrumbs.with_h1 "Utilisateurs"

    - layout.with_section do
      = render Views::Users::ListComponent.new(@users, @pagy, namespace: :admin, parent: @ddfip) do |view|
        - view.with_column(:name)
        - view.with_column(:email)
        - view.with_column(:roles)
        - view.with_column(:otp_method)
        - view.with_column(:offices)
