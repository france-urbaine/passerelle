- if params[:ids].present?
  .header-bar.header-bar--selection
    .header-bar__actions
      .header-bar__action
        button.icon-button.selection-bar__close-button(
          data-action="selection#uncheckAll"
        )
          = svg_icon("x-mark", "Réinitialiser la sélection")
          span.tooltip Réinitialiser la sélection

      .header-bar__text
        - if params[:ids] == "all"
          = display_count(pagy.count, "guichet sélectionné", plural: "guichets sélectionnés")
        - else
          = display_count(params[:ids].size, "guichet sélectionné", plural: "guichets sélectionnés")

          - if params[:ids].size == offices.length && offices.length < pagy.count
            |  (
            a(
              data-action="selection#checkAll"
              href=offices_path(extract_params(:search).merge(ids: "all"))
            ) Sélectionner les #{count(pagy.count, "guichet")}
            | )

    .flex-auto
    .header-bar__actions
      .header-bar__action
        a.button(
          data-turbo-frame="modal"
          href=remove_all_offices_path(**current_selection_params)
        ) Supprimer la sélection

- else
  .header-bar
    = search_component
    .flex-auto
    = index_options_component(pagy, "guichet", order: { name: "guichet", ddfip: "DDFIP", action: "action" })
