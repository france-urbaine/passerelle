.dialog( role="dialog" aria-labelledby="dialog-title" )
  .dialog__container
    .dialog__header
      h1#dialog-title.dialog__title Modification du d√©partement

    = form_with(model: departement) do |form|
      .dialog__content
        .form-block
          = form.label :name
          = form.text_field :name, autofocus: true
          = display_errors departement, :name

        .form-block
          = form.label :code_departement
          = form.text_field :code_departement
          = display_errors departement, :code_departement

        .form-block
          = form.label :code_region
          = form.text_field :code_region
          = display_errors departement, :code_region

      .dialog__actions
        button.button.button__primary( type="submit" ) Enregistrer
        a.button( href=departement_path(departement) ) Annuler
