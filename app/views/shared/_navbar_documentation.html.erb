<%= render Navbar::Component.new do |navbar| %>
  <% navbar.with_header do %>
    <%= link_to("API", api_documentation_path, class: "brand__right") %>
  <% end %>

  <% navbar.with_section do |section| %>
    <% section.with_link("Retour Ã  Fiscahub", root_url, icon: "arrow-uturn-left") %>
  <% end %>

  <% navbar.with_section("Guides") do |section| %>
    <% section.with_link("A propos", api_documentation_path("guides/a_propos"), icon: "bookmark") %>
    <% section.with_link("Authentification", api_documentation_path("guides/authentification"), icon: "key") %>
  <% end %>

  <% if doc = apipie_documentation %>
    <% navbar.with_section("References") do |section| %>
      <% doc[:resources].each do |_resource, data| %>
        <% section.with_link(data[:name], data[:doc_url], icon: data[:metadata][:icon]) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
