<%= fields model: User.new do |form| %>
  <%= form.block :first_name do %>
    <%= form.label :first_name, "Text" %>
    <%= form.text_field :first_name, autocomplete: "off" %>
  <% end %>

  <%= form.block :email do %>
    <%= form.label :email, "Email" %>
    <%= form.email_field :email, autocomplete: "off" %>
  <% end %>

  <%= form.block :password do %>
    <%= form.label :password, "Password (default)" %>
    <%= form.password_field :password, autocomplete: "off" %>
  <% end %>

  <%= form.block :password do %>
    <%= form.label :password, "Password (enhanced component)" %>
    <%= form.password_field_component :password, autocomplete: "off" %>
  <% end %>

  <%= form.block :name do %>
    <%= form.label :name, "Textarea" %>
    <%= form.text_area :name %>
  <% end %>
<% end %>
