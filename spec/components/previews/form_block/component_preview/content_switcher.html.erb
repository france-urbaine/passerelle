<%= fields model: User.new do |form| %>
  <div data-controller="switch">
    <%= form.block :affectaction do %>
      <%= form.label :affectaction, "Select a value" %>
      <%= form.select :affectaction, { "Habitation" => "hab", "Professionel" => "pro" }, { include_blank: true }, data: { switch_target: "input" } %>
    <% end %>

    <div data-switch-target="target" data-switch-value="hab" hidden>
      <p>Vous avez sélectionner un local d'habitation :</p>

      <%= form.block :lambda do %>
        <%= form.check_box :organization_admin, disabled: true %>
        <%= form.label :organization_admin, "Cette checkbox est active" %>
      <% end %>
    </div>

    <div data-switch-target="target" data-switch-value="hab, pro" data-switch-value-separator=", " hidden>
      <p>Vous avez sélectionner une des valeurs</p>

      <%= form.block :lambda do %>
        <%= form.check_box :organization_admin, disabled: true %>
        <%= form.label :organization_admin, "Cette checkbox est active" %>
      <% end %>
    </div>
  </div>
<% end %>
