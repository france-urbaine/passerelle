<%= card_component do |card| %>
  <% card.with_header do %>
    Edit a record
  <% end %>

  <% card.with_form(model: record, url: "/") do |form| %>
    <%= form.block(:name) do %>
      <%= form.label(:name) %>
      <%= form.text_field(:name, autofocus: true, required: true) %>
    <% end %>

    <%= form.block(:code_insee) do %>
      <%= form.label(:code_insee) %>
      <%= form.text_field(:code_insee, required: true) %>
    <% end %>
  <% end %>

  <% card.with_submit_action "Enregistrer" %>
<% end %>
