<%= modal_component do |modal| %>
  <% modal.with_header do %>
    Dialog title
  <% end %>

  <% modal.with_body do %>
    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt.
    <br>
    Ut labore et dolore magna aliqua. Ut enim ad minim veniam.
  <% end %>

  <% modal.with_action "Continue", primary: true %>
  <% modal.with_action "Do something else" %>

  <% modal.with_close_action "Cancel" %>
  <% modal.with_other_action "Open a modal", "/rails/view_components/samples/link/modal", modal: true %>
<% end %>
