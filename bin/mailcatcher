#!/usr/bin/env ruby

begin
  gem "mailcatcher"
rescue LoadError
  puts "Installing mailcatcher..."
  system("gem install mailcatcher")
  Gem.clear_paths
end

require "mail_catcher"
require_relative "../config/dotenv"

MailCatcher.run!(
  daemon:    false,
  smtp_port: ENV.fetch("SMTP_PORT", 1025)
)
